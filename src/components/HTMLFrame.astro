---
interface Props {
  text: string,
}

const plain = Astro.props.text;
---

<div class="htmlframe" set:html={plain}></div>

<style lang="scss" is:global>
  @use '@/styles/mediaquery.scss' as m;
  // global にしないとスタイルがあたりません
  .htmlframe {
    h1, h2, h3, h4, h5, h6 {
      text-align: center;
      font-weight: bold;
      @include m.break(pc) {
        text-align: left;
      }
    }
    h1 {
      color: var(--accent);
      font-size: 2.0rem;
      margin: 1rem 0;
      border-bottom: 1px solid var(--white-2);
    }
    h2 {
      font-size: 1.8rem;
      margin: .8rem 0;
      border-bottom: 1px solid var(--white-2);
    }
    h3 {
      font-size: 1.4rem;
      margin: .5rem 0;
    }
    h4, h5, h6 {
      font-size: 1.0rem;
      margin: .2rem 0;
    }
    em {
      font-style: italic;
    }
    a {
      text-decoration: underline;
      transition: var(--trs-duration);
      &:hover {
        text-decoration: none;
        color: var(--accent);
      }
    }
    strong {
      font-weight: bold;
    }
  }
</style>