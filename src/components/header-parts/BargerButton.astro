<div class="barger-button">
    <label id="button"><span></span></label>
</div>

<script>
    let bargerStatus = {
        flag: false,
        toggle: () => {
            bargerStatus.flag = !bargerStatus.flag;
        }
    }
    const button = document.querySelector("#button");
    const menu = document.querySelector("#header-menu");
    button.addEventListener("click", (e) => {
        bargerStatus = !bargerStatus;
        if (bargerStatus) menu.classList.remove("panelactive");
        else menu.classList.add("panelactive");
    }, false);
    document.addEventListener('click', (e) => {
        if(!e.target.closest('#button')) {
            //ここに外側をクリックしたときの処理
        } else {
            //ここに内側をクリックしたときの処理
        }
    });
</script>

<style lang="scss">
    @use "@/styles/mediaquery" as mq;

	@include mq.break(mb) {
        .barger-button {
            width: 100%;
            height: var(--header-h);
            background-color: var(--distinction);
            position: absolute;
            z-index: 5000;

            label {
                position: fixed;
                z-index: 6000;
                top: 4px;
                right: 10px;
                display: flex;
                height: 40px;
                width: 40px;
                justify-content: center;
                align-items: center;
                transition: 0.5s ease;

                span, span:before, span:after {
                    background-color: var(--white);
                    position: fixed;
                    content: "";
                    display: block;
                    height: 4px;
                    width: 25px;
                    border-radius: 3px;
                    position: absolute;
                }

                span:before {
                    bottom: 8px;
                }

                span:after {
                    top: 8px;
                }
            }
        }
    }
</style>